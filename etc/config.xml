<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <payme>
                <debug>1</debug>
                <active>0</active>
                <title>PayMe</title>
                <model>Deloitte\PayMe\Model\PayMeUnified</model>
                <client_id backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <client_sceret backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <sign_key_id backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <sign_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <order_status>processing</order_status>
                <title>PayMe</title>
                <currency>USD</currency>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>
                <sort_order>1</sort_order>
                <group>offline</group>
            </payme>
        </payment>
    </default>
</config>
